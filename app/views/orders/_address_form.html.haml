= form_with :url => order_path(state: :delivery), :method => :patch, :html => {:id => "form1"} do |f|
  .billing_address{class: 'col-md-5 mb-40', id: 'form1', style: "padding-left: 0px; padding-bottom: 10px;"}
    .form-group{class: "#{"has-error" if adress_has_error?(:first_name)}"}
      = f.label :first_name, t('.first_name'), { class: 'control-label font-weight-lights', for: "first_name" }
      = f.text_field :first_name, { class: 'form-control', id: 'firstName', type: "text", placeholder: "First Name", value: @address_billing.first_name }
      %span.help-block= adress_error_message(:first_name) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:last_name)}"}
      = f.label :last_name, t('.last_name'), { class: 'control-label font-weight-lights', for: "last_name" }
      = f.text_field :last_name, { class: 'form-control', id: 'lastName', type: "text", placeholder: "Last Name", value: @address_billing.last_name }
      %span.help-block= adress_error_message(:last_name) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:address)}"}
      = f.label :address, t('.address'), { class: 'control-label font-weight-lights', for: "address" }
      = f.text_field :address, { class: 'form-control', id: 'address', type: "text", placeholder: "Address", value: @address_billing.address }
      %span.help-block= adress_error_message(:address) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:city)}"}
      = f.label :city, t('.city'), { class: 'control-label font-weight-lights', for: "city" }
      = f.text_field :city, { class: 'form-control', id: 'city', type: "text", placeholder: "City", value: @address_billing.city }
      %span.help-block= adress_error_message(:city) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:zip)}"}
      = f.label :zip, t('.zip'), { class: 'control-label font-weight-lights', for: "zip" }
      = f.text_field :zip, { class: 'form-control', id: 'zip', type: "text", placeholder: "Zip", value: @address_billing.zip }
      %span.help-block= adress_error_message(:zip) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:country)}"}
      = f.label :country, t('.country'), { class: 'control-label font-weight-lights', for: "country" }
      = f.text_field :country, { class: 'form-control', id: 'country', type: "text", placeholder: "Country", value: @address_billing.country }
      %span.help-block= adress_error_message(:country) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:phone)}"}
      = f.label :phone, t('.phone'), { class: 'control-label font-weight-lights', for: "phone" }
      = f.text_field :phone, { class: 'form-control', id: 'phone', type: "tel", placeholder: "Example +355 66 123 4567", value: @address_billing.phone }
      %span.help-block= adress_error_message(:phone) if current_user.errors.any?
  .shipping_address{class: 'col-md-5 col-md-offset-1', id: 'form2', style: "#{"display: none;" if session[:check] == true}" }
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_first_name)}"}
      = f.label :shipping_first_name, t('.first_name'), { class: 'control-label font-weight-lights', for: "shipping_first_name" }
      = f.text_field :shipping_first_name, { class: 'form-control', type: "text", placeholder: "First Name", value: @address_shipping.first_name }
      %span.help-block= adress_error_message(:shipping_first_name) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_last_name)}"}
      = f.label :shipping_last_name, t('.last_name'), { class: 'control-label font-weight-lights', for: "shipping_last_name" }
      = f.text_field :shipping_last_name, { class: 'form-control', id: 'lastName', type: "text", placeholder: "Last Name", value: @address_shipping.last_name }
      %span.help-block= adress_error_message(:shipping_last_name) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_address)}"}
      = f.label :shipping_address, t('.address'), { class: 'control-label font-weight-lights', for: "shipping_address" }
      = f.text_field :shipping_address, { class: 'form-control', id: 'address', type: "text", placeholder: "Address", value: @address_shipping.address }
      %span.help-block= adress_error_message(:shipping_address) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_city)}"}
      = f.label :shipping_city, t('.city'), { class: 'control-label font-weight-lights', for: "shipping_city" }
      = f.text_field :shipping_city, { class: 'form-control', id: 'city', type: "text", placeholder: "City", value: @address_shipping.city }
      %span.help-block= adress_error_message(:shipping_city) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_zip)}"}
      = f.label :shipping_zip, t('.zip'), { class: 'control-label font-weight-lights', for: "shipping_zip" }
      = f.text_field :shipping_zip, { class: 'form-control', id: 'zip', type: "text", placeholder: "Zip", value: @address_shipping.zip }
      %span.help-block= adress_error_message(:shipping_zip) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_country)}"}
      = f.label :shipping_country, t('.country'), { class: 'control-label font-weight-lights', for: "shipping_country" }
      = f.text_field :shipping_country, { class: 'form-control', id: 'country', type: "text", placeholder: "Country", value: @address_shipping.country }
      %span.help-block= adress_error_message(:shipping_country) if current_user.errors.any?
    .form-group{class: "#{"has-error" if adress_has_error?(:shipping_phone)}"}
      = f.label :shipping_phone, t('.phone'), { class: 'control-label font-weight-lights', for: "shipping_phone" }
      = f.text_field :shipping_phone, { class: 'form-control', id: 'phone', type: "tel", placeholder: "Example +355 66 123 4567", value: @address_shipping.phone }
      %span.help-block= adress_error_message(:shipping_phone) if current_user.errors.any?
  .form-group.checkbox{ class: 'col-md-5 col-md-offset-6' }
    %label.font-weight-light.pl-0
      = f.check_box(:check, { class: 'checkbox-input', type: "checkbox", hidden: "true", name: 'check', onchange: "document.getElementById('form2').style.display = this.checked ? 'none' : 'block'" }, true, false)
      %span.checkbox-icon
        %i.fa.fa-check
      %span.checkbox-textt= t('.use_billing_adress')
  .row
    .col-md-12
      .general-text-align.mb-60
        %p.in-gold-500.font-18= t('.order_summary')
        %table.general-summary-table
          %tr
            %td
              %p.font-16= t('.item_total')
            %td
              %p.font-16= number_to_currency(@order.total_price)
          %tr
            %td
              %p.font-16= t('.order_total')
            %td
              %p.font-16= number_to_currency(@order.total_price - @order.coupon.price)
        = f.submit t('.save_and_continue'), { class: 'btn center-block mb-20' }
