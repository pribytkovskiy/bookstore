%h1.mt-0.mb-25= t('.my_orders')
%p.in-grey-600.small.mb-10.visible-xs= t('.sort_by')
.dropdown.general-order-dropdown.mb-20
  %a.dropdown-toggle.dropdown-btn.width-100{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = "#{params[:name_sort_order] || 'All'}"
    %i.fa.fa-angle-down.dropdown-icon
  %ul.dropdown-menu
    %li
      = link_to t('.all'), orders_path(name_sort_order: t('.all')), method: "get"
    %li
      = link_to t('.in_queue'), orders_path(sort_order: 'in_queued', name_sort_order: t('.in_queue')), method: "get"
    %li
      = link_to t('.in_delivery'), orders_path(sort_order: 'in_delivering', name_sort_order: t('.in_delivery')), method: "get"
    %li
      = link_to t('.delivered'), orders_path(sort_order: 'delivering', name_sort_order: t('.delivered')), method: "get"
    %li
      = link_to t('.canceled'), orders_path(sort_order: 'canceling', name_sort_order: t('.canceled')), method: "get"
.visible-xs
  .general-cart-item.divider-lg-bottom.pt-0
    %table.table
      - @orders.each do |order|
        %tr
          %td.col-half
            %span.in-grey-600= t('.number')
          %td.col-half
            %span.general-order-number= order.decorate.number
        %tr
          %td
            %span.in-grey-600= t('.completed_at')
          %td
            %span.in-grey-900.font-16.font-weight-light= order.decorate.date
        %tr
          %td
            %span.in-grey-600= t('.status')
          %td
            %span.font-16.in-grey-900.font-weight-light= order.state
        %tr
          %td
            %span.in-grey-600= t('.total')
          %td
            %strong.font-16= number_to_currency(order.subtotal)
  .general-cart-item
.hidden-xs.mb-res-50
  %table.table.table-hover
    %thead
      %tr
        %th
          %span.in-grey-600= t('.number')
        %th
          %span.in-grey-600= t('.completed_at')
        %th
          %span.in-grey-600= t('.status')
        %th
          %span.in-grey-600= t('.total')
    %tbody
      - @orders.each do |order|
        %tr
          %td
            %span.general-order-number= order.decorate.number
          %td
            %span.in-grey-900.font-16.font-weight-light= order.decorate.date
          %td
            %span.font-16.font-weight-light.text-success= order.state
          %td
            %strong.font-16= number_to_currency(order.subtotal) 
 