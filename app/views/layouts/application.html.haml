<!DOCTYPE html>
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %title= t('.title')
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600", rel: "stylesheet"}
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-default
      .container
        .navbar-header
          %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand= t('.title')
          %a.shop-link.pull-right.visible-xs{href: "#{cart_path(id: @order.id)}"}
            %span.shop-icon
              %span.shop-quantity= @order.order_items.count
        %a.shop-link.pull-right.hidden-xs{href: "#{cart_path(id: @order.id)}"}
          %span.shop-icon
            %span.shop-quantity= @order.order_items.count
        #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
          .visible-xs
            %button.close{type: "button", 'aria-label': "Close"}
              %span{'aria-hidden': "true"} &times;
            %ul.nav.navbar-nav
              %li
                %a{href: "#{home_path}"}= t('.home')
                %a{href: "#{catalog_path(:category_id => @labels.ids)}"}= t('.shop')
                %ul.dropdown-menu
                  - @labels.each do |category|
                    %li
                      %a.filter-link{href: "#{catalog_path(:category_id => category.id)}"}= category.category
              - if user_signed_in?
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}= t('.my_account')
                %ul.dropdown-menu
                  %li
                    %a.filter-link{:href => checkout_index_path}= t('.orders')
                  %li
                    %a.filter-link{:href => "/settings/index?"}= t('.settings')
                  %li.divider{:role => "separator"}
                  %li
                    %a{"data-method" => "delete", :href => "/users/sign_out?", :rel => "nofollow"}= t('.log_out')
              - else
                %li
                  %a{:href => "/users/sign_in", :role => "button"}= t('.sign_in')
                %li
                  %a{:href => "/users/sign_up", :role => "button"}= t('.sign_up')
          .hidden-xs
            %ul.nav.navbar-nav
              %li
                %a{href: "#{home_path}"}= t('.home')
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}= t('.shop')
                %ul.dropdown-menu
                  %li
                    %a{href: "#{catalog_path(:category_id => @labels.ids)}"}= 'All'
                  - @labels.each do |category|
                    %li
                      %a.filter-link{href: "#{catalog_path(:category_id => category.id)}"}= category.category
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}= t('.my_account')
                  %ul.dropdown-menu
                    %li
                      %a.filter-link{:href => checkout_index_path}= t('.orders')
                    %li
                      %a.filter-link{:href => settings_path(user_id: current_user.id)}= t('.settings')
                    %li.divider{:role => "separator"}
                    %li
                      %a.collapse-link{"data-method" => "delete", :href => "/users/sign_out?", :rel => "nofollow"}= t('.log_out')
              - else
                %li
                  %a{:href => "/users/sign_in?", :role => "button"}= t('.sign_in')
                %li
                  %a{:href => "/users/sign_up?", :role => "button"}= t('.sign_up')
    %main.container
      = yield
    %footer.footer.navbar.navbar-inverse.mb-0
      .container
        .row
          .col-sm-9
            %ul.list-inline.general-align.mb-25
              %li
                %a.nav-link{href: "#{home_path}"}= t('.home')
              %li
                %a.nav-link{href: "#{catalog_path(:category_id => @labels.ids)}"}= t('.shop')
              - if user_signed_in?
                %li
                  %a.nav-link{:href => checkout_index_path}= t('.orders')
                %li
                  %a.nav-link{:href => settings_path(user_id: current_user.id)}= t('.settings')
          .col-sm-3
            %p.general-nav-mail= t('.email')
            %p.general-nav-number= t('.telephone')
            %ul.list-inline.general-align
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-facebook{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-twitter{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-google-plus{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-instagram{'aria-hidden': "true"}
