.text-center
  %h3.general-login-title Sign up
  %a.general-login-icon{href: "#{user_facebook_omniauth_authorize_path}"}
    %i.fa.fa-facebook-official
  %p.general-login-text or
= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
  = devise_error_messages!
  .form-group.mb-30
    %label.control-label.font-weight-light{for: "email"} Enter Email
    = f.email_field :email, autofocus: true, placeholder: "Enter Email", id: "email", class: "form-control"
  .form-group.mb-30
    %label.control-label.font-weight-light{for: "password"} Password
    = f.password_field :password, autocomplete: "off", placeholder: "Password", id: "password", class: "form-control"
  .form-group.mb-30
    %label.control-label.font-weight-light{for: "confirm"} Confirm Password
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", id: "confirm", class: "form-control"
  .text-center
    = f.button "Sign up", class: "btn btn-default mb-20"
