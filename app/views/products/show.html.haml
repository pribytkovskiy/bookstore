%a.general-back-link{href:"#{session.delete(:return_to)}"}
  %i.fa.fa-long-arrow-left.mr-15
  = t('.back_to_results')
.row
  .col-sm-6
    .product-gallery
      .mb-20
        %img.img-responsive.imgv{src: @product.image}
      .images.clearfix
        %a.img-link{href: "#"}
          %img.width-full{src: @product.image}
        %a.img-link{href: "#"}
          %img.width-full{src: @product.image}
        %a.img-link{href: "#"}
          %img.width-full{src: @product.image}
  .col-sm-6
    %h1.mt-res-0= @product.title
    %p.in-grey-600.small= @product.author_name
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10= @product.price
      .col-xs-5.col-md-3
        = form_tag(order_items_path, method: "post")
        .input-group.general-position
          %a.input-link.minus.fa.fa-minus.line-height-40.help_fa{href: ""}
          %input.form-control.quantity-input{id: "quantity", type: "text", name: "quantity", min: 1, max: 999, value: 1}
          %input.form-control.quantity-input.hidden{type: "text", name: "product_id", value: "#{@product.id}"}
          %input.form-control.quantity-input.hidden{type: "text", name: "order_id", value: "#{@order.id}"}
          %input.form-control.quantity-input.hidden{type: "text", name: "redirect_to", value: "#{product_path(id: @product.id)}"}
          %a.input-link.plus.fa.fa-plus.line-height-40.help_fa{href: ""}
          %input.btn.btn-default.pull-right.general-positionid.hidden{id: '1', type: "submit", value: t('.add_to_cart')}
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position{type: "submit", id: 'add-to-cart', onclick: "document.getElementById('1').click()"}= t('.add_to_cart')
        .hidden
          = button_to t('.add_to_cart'), {type: "submit", class: 'btn btn-default pull-right general-position hidden', onclick: "document.getElementById('1').click()"}
    .card
      %p= t('.description')
      %p.lead.small.line-height-2
        - if @product.description.length >= 250
          = truncate(@product.description, length: 250)
          = link_to t('.read_more'), '', class: 'in-gold-500 ml-10 read-more'
          :javascript
            $('.read-more').on('click', function(e) {
              e.preventDefault();
              $(this).parent().html("#{@product.description}")
            })
        - else
          = @product.description
    .card
      .clearfix
        %p.general-item-info.pull-right= @product.date
        %p.break-word= t('.year_of_publication')
    .card
      .clearfix
        %p.general-item-info.pull-right= @product.dimensions
        %p.break-word= t('.dimensions')
    .card
      .clearfix
        %p.general-item-info.pull-right= @product.materials
        %p.break-word= t('.materials')
.mb-80
  %ul.media-list
    = render 'products/show_review'
    - if user_signed_in?
      = render 'products/form_review' 
