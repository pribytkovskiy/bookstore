- present @product do |product|
  %a.general-back-link{href:"#{product_path}"}
    %i.fa.fa-long-arrow-left.mr-15
    = t('.back_to_results')
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive.imgv{src: product.image}
        .images.clearfix
          %a.img-link{href: "#"}
            %img.width-full{src: product.image}
          %a.img-link{href: "#"}
            %img.width-full{src: product.image}
          %a.img-link{href: "#"}
            %img.width-full{src: product.image}
    .col-sm-6
      %h1.mt-res-0= product.title
      %p.in-grey-600.small= product.author_name
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10= product.price
        .col-xs-5.col-md-3
          = form_tag(product_path, method: "patch")
          .input-group.general-position
            %a.input-link.minus.fa.fa-minus.line-height-40.help_fa{href: ""}
            %input.form-control.quantity-input{id: "quantity", type: "text", name: "quantity", min: 1, max: 999, value: 1}
            %a.input-link.plus.fa.fa-plus.line-height-40.help_fa{href: ""}
            %input.btn.btn-default.pull-right.general-positionid.hidden{id: '1', type: "submit", value: "Add to Cart"}
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position{type: "submit", onclick: "document.getElementById('1').click()"}= t('.add_to_cart')
          .hidden
            = button_to "Add to Cart", {type: "submit", class: 'btn btn-default pull-right general-position hidden', onclick: "document.getElementById('1').click()"}
      .card
        .clearfix
          %p.general-item-info.pull-right= product.materials
          %p.break-word= t('.materials')
        %p.in-grey-600.small.line-height-2
          = product.materials
      .card
        %p= t('.description')
        %p.in-grey-600.small.line-height-2
          = product.description
      .card
        .clearfix
          %p.general-item-info.pull-right= product.date
          %p.break-word= t('.year_of_publication')
      .card
        .clearfix
          %p.general-item-info.pull-right= product.dimensions
          %p.break-word= t('.dimensions')
      .card
        .clearfix
          %p.general-item-info.pull-right= product.materials
          %p.break-word= t('.materials')
  .mb-80
    %ul.media-list
      = render 'products/show_review'
      - if user_signed_in?
        = render 'products/form_review' 
