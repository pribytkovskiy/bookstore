    = f.text_field :user_id, { id: 'checkbox-input', hidden: "true", value: current_user.id }
.form-group.checkbox{ class: 'col-md-5 col-md-offset-6' }
  %label.font-weight-light.pl-0
    = f.check_box :check, { id: 'checkbox', class: 'checkbox-input', type: "checkbox", hidden: "true", name: 'check', checked: check?, onchange: "document.getElementById('form2').style.display = this.checked ? 'none' : 'block'" }, true, false
    %span.checkbox-icon
      %i.fa.fa-check
    %span.checkbox-text= t('.use_billing_adress')
.row
  .col-md-12
    .general-text-align.mb-60
      = f.submit I18n.t('save_and_continue'), { class: 'btn center-block mb-20' }
