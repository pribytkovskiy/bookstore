.billing_address{class: 'col-md-5 mb-40', id: 'form1', style: "padding-left: 0px; padding-bottom: 10px;"}
  .form-group{class: "#{"has-error" if adress_has_error?(:first_name)}"}
    = f.label :first_name, t('.first_name'), { class: 'control-label font-weight-lights', for: "first_name" }
